<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">









            <com.dev4free.devbuyandroidclient.view.ListViewCustom
                android:layout_margin="@dimen/dimens_16dp"
                android:id="@+id/lv_order1"
                android:divider="@color/background"
                android:dividerHeight="@dimen/dimens_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.dev4free.devbuyandroidclient.view.ListViewCustom>


            <RelativeLayout
                android:background="@color/background"
                style="@style/ll_height45dp_nomargin_padding">


                <TextView
                    android:id="@+id/tv_order1_totalMoney"
                    android:textSize="18dp"
                    android:textColor="@color/red"
                    android:layout_alignParentRight="true"
                    android:text="￥399.00元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toLeftOf="@id/tv_order1_totalMoney"
                    android:id="@+id/tv_order1_totalAmount"
                    android:text="共100件商品，合计："
                    style="@style/tv_common_16sp" />


            </RelativeLayout>




            <RelativeLayout
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:layout_marginTop="0dp"
                android:background="@color/background"
                style="@style/ll_height45dp_nomargin_padding">


                <Button
                    android:id="@+id/btn_order1_payment"
                    android:layout_alignParentRight="true"
                    android:text="付款"
                    style="@style/btn_red_small" />

                <Button
                    android:layout_marginRight="0dp"
                    android:layout_toLeftOf="@id/btn_order1_payment"
                    android:background="#FF979797"
                    android:text="取消订单"
                    style="@style/btn_red_small" />

            </RelativeLayout>






        </LinearLayout>

    </ScrollView>

</LinearLayout>