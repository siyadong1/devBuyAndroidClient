<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">





    <com.dev4free.devbuyandroidclient.view.TitleBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.dev4free.devbuyandroidclient.view.TitleBarView>



    <LinearLayout
        android:orientation="vertical"
        android:gravity="start"
        android:layout_marginTop="@dimen/dimens_45dp"
        android:layout_height="wrap_content"
       style="@style/ll_height45dp_margin_padding">

    <TextView

        android:textSize="19dp"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:text="付款详情"
        style="@style/tv_common_16sp"/>



        <TextView
            android:layout_marginTop="@dimen/dimens_16dp"
           style="@style/tv_common_line" />




        <LinearLayout
            style="@style/ll_height45dp_nomargin_nopadding">

            <TextView
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="账号："
               style="@style/tv_common_16sp"/>

            <TextView
                android:id="@+id/tv_payment_username"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
               style="@style/tv_common_16sp"/>

        </LinearLayout>


        <TextView
            android:layout_marginTop="@dimen/dimens_16dp"
            style="@style/tv_common_line" />
        <LinearLayout
            style="@style/ll_height45dp_nomargin_nopadding">
            <TextView
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="付款方式："
                style="@style/tv_common_16sp"/>
            <TextView
                android:id="@+id/tv_payment_type"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="DevBuy钱包"
                style="@style/tv_common_16sp"/>
        </LinearLayout>





        <TextView
            android:layout_marginTop="@dimen/dimens_16dp"
            style="@style/tv_common_line" />
        <LinearLayout
            style="@style/ll_height45dp_nomargin_nopadding">
            <TextView
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="账号余额："
                style="@style/tv_common_16sp"/>
            <TextView
                android:id="@+id/tv_payment_balance"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/tv_common_16sp"/>
        </LinearLayout>










        <TextView
            android:layout_marginTop="@dimen/dimens_16dp"
            style="@style/tv_common_line" />


        <LinearLayout
            style="@style/ll_height45dp_nomargin_nopadding">

            <TextView
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="需付款："
                style="@style/tv_common_16sp"/>

            <TextView
                android:id="@+id/tv_payment_price"
                android:textColor="@color/red"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/tv_common_16sp"/>
        </LinearLayout>

    </LinearLayout>





    <Button
        android:id="@+id/btn_payment_confirm"
        android:layout_marginTop="45dp"
        android:text="确认付款"
        style="@style/btn_red" />

</LinearLayout>