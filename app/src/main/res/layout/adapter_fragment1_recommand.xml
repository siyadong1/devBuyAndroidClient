<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        style="@style/ll_height45dp_nomargin_nopadding">
        <TextView
            android:id="@+id/tv_fragment1_recommand_title"
            android:textColor="#FF73E905"
            android:layout_centerInParent="true"
            style="@style/tv_common_16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:paddingLeft="@dimen/dimens_16dp"
        android:paddingRight="@dimen/dimens_16dp"
        android:background="@color/background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_fragment1_recommand_pic1_1"
            android:layout_width="match_parent"
            android:layout_height="94dp" />

        <LinearLayout

            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_fragment1_recommand_pic2_1"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <ImageView
                android:id="@+id/iv_fragment1_recommand_pic2_2"
                android:paddingLeft="5dp"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <ImageView
                android:id="@+id/iv_fragment1_recommand_pic2_3"
                android:paddingLeft="5dp"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="100dp" />

        </LinearLayout>

    </LinearLayout>








</LinearLayout>