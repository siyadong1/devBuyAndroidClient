<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">



    <RelativeLayout
        android:gravity="left"
        android:layout_height="wrap_content"
        style="@style/ll_height45dp_nomargin_padding">


        <TextView
            android:id="@+id/tv_order1_shopname"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:text=""
           style="@style/tv_common_16sp" />


        <ImageView
            android:id="@+id/iv_order1_goods_picture"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:layout_below="@id/tv_order1_shopname"
            android:src="@mipmap/shopingcar_phone_grid_1_1_1"
            android:layout_height="wrap_content"
           android:layout_width="wrap_content" />

        <TextView
            android:gravity="left"
            android:id="@+id/tv_order1_description"
            android:layout_toRightOf="@id/iv_order1_goods_picture"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:layout_below="@id/tv_order1_shopname"
            android:layout_marginLeft="37dp"
            android:text=""
            style="@style/tv_common_16sp" />


        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="@dimen/dimens_16dp"
            android:layout_alignLeft="@id/tv_order1_description"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:layout_below="@id/tv_order1_description"
            android:id="@+id/tv_order1_realprice"
            android:text=""
            style="@style/tv_common_16sp" />


        <TextView
            android:layout_marginBottom="@dimen/dimens_16dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="@dimen/dimens_16dp"
            android:layout_toRightOf="@id/tv_order1_realprice"
            android:textSize="18sp"
            android:textColor="#BDBDBD"
            android:layout_below="@id/tv_order1_description"
            android:id="@+id/tv_order1_saleprice"
            android:text=""
            style="@style/tv_common_16sp" />

    </RelativeLayout>


</LinearLayout>