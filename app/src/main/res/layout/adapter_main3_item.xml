<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_marginBottom="@dimen/dimens_16dp"
        android:gravity="left"
        android:layout_height="wrap_content"
        style="@style/ll_height45dp_nomargin_padding">


        <CheckBox
            android:layout_marginTop="@dimen/dimens_16dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/ck_main3_shopname"
            android:text="小米手机旗舰店"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="@dimen/dimens_16dp"
            android:layout_alignParentRight="true"
            android:textColor="#FF707070"
            android:background="#FF979797"
            android:text="删除"
            style="@style/btn_red_small" />


        <ImageView
            android:id="@+id/iv_order1_goods_picture"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:layout_below="@id/ck_main3_shopname"
            android:src="@mipmap/shopingcar_phone_grid_1_1_1"
            android:layout_height="wrap_content"
           android:layout_width="wrap_content" />

        <TextView
            android:gravity="left"
            android:id="@+id/tv_main3_description"
            android:layout_toRightOf="@id/iv_order1_goods_picture"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:layout_below="@id/ck_main3_shopname"
            android:layout_marginLeft="37dp"
            android:text="小米4手机 小米4移动4G 5.0英寸/3GB内存 特别版 运行2GB内存 可选"
            style="@style/tv_common_16sp" />


        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="@dimen/dimens_16dp"
            android:layout_alignLeft="@id/tv_main3_description"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:layout_below="@id/tv_main3_description"
            android:id="@+id/tv_main3_realprice"
            android:text="￥34"
            style="@style/tv_common_16sp" />


        <TextView
            android:layout_marginBottom="@dimen/dimens_16dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="@dimen/dimens_16dp"
            android:layout_toRightOf="@id/tv_main3_realprice"
            android:textSize="18sp"
            android:textColor="#BDBDBD"
            android:layout_below="@id/tv_main3_description"
            android:id="@+id/tv_main3_saleprice"
            android:text="￥35-128"
            style="@style/tv_common_16sp" />

    </RelativeLayout>


</LinearLayout>