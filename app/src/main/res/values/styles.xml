<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>













    <style name="tv_common_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#FFD5D7DC</item>
    </style>



    <style name="rd_main_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@drawable/selector_main_text</item>
        <item name="android:button">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ll_height45dp_cornor5dp_margin_nopadding">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/shape_corner_5dp_solid_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ll_height45dp_margin_nopadding">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ll_height45dp_nomargin_padding">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:orientation">horizontal</item>
    </style>





<style name="et_common_style">

    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#707070</item>
    <item name="android:textColorHint">#BDBDBD</item>
    <item name="android:layout_marginLeft">16dp</item>
    <item name="android:background">#FFFFFF</item>
    <item name="android:layout_gravity">center_vertical</item>

</style>



    
    <style name="tv_common_16sp">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#464646</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>




    <style name="btn_red">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/selector_btn_red</item>
    </style>

    <style name="btn_blue">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/selector_btn_blue</item>
    </style>





    <style name="btn_red_small">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/selector_btn_red</item>
    </style>


</resources>
